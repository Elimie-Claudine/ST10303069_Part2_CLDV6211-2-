@{
    ViewData["Title"] = "Home Page | Event Ease";
}


<style>
    body {
        background-color: #f0f4f8;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        text-align: center;
        padding: 50px;
    }

    .homepage-container {
        background-color: #ffffff;
        padding: 40px;
        margin: 0 auto;
        max-width: 600px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        border-radius: 16px;
    }

    h1 {
        color: #2c3e50;
        margin-bottom: 10px;
    }

    p {
        font-size: 1.2em;
        color: #555;
        margin-bottom: 30px;
    }

    .nav-buttons {
        display: flex;
        justify-content: center;
        gap: 20px;
        flex-wrap: wrap;
    }

    .nav-button {
        background-color: #4a90e2;
        color: white;
        padding: 12px 24px;
        text-decoration: none;
        border-radius: 8px;
        transition: background-color 0.3s ease;
        font-weight: bold;
    }

    .nav-button:hover {
        background-color: #357ab8;
    }
</style>

<div class="homepage-container">
    <h1>Welcome to EventEase !</h1>
    <p>Your solution for managing Venues, Events, and Bookings.</p>

    <div class="nav-buttons">
        <a asp-controller="Venue" asp-action="Index" class="nav-button">View Venues</a>
        <a asp-controller="Event" asp-action="Index" class="nav-button">View Events</a>
        <a asp-controller="Booking" asp-action="Index" class="nav-button">View Bookings</a>
    </div>
</div>

